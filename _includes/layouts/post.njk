---
layout: layouts/base.njk
section: post
---

<article>
  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by {{ metadata.author.name }}
    </small>
  </p>

  {{ layoutContent | safe }}

  <p>&nbsp;</p>
  <h3>Like what you've seen so far?<br>Sign up here to get it straight in your inbox:</h3>
  {% include "components/signup.njk" %}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}
</article>

<nav>
  <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
</nav>
